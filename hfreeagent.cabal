category:            Network

build-type:          Simple

-- Constraint on the version of Cabal needed to build this package.
cabal-version:       >=1.8

library
  hs-source-dirs:       src
  exposed-modules:      Web.FreeAgent
  other-modules:        Web.FreeAgent.Types
                        Web.FreeAgent.Util
                        Web.FreeAgent.OAuth2
  ghc-options:          -O2 -Wall -fno-warn-name-shadowing
  build-depends:        base >= 4 && < 5
                      , bytestring
                      , aeson
                      , transformers
                      , errors
                      , either
                      , io-streams
                      , hoauth2 == 0.3.0
                      , http-streams == 0.6.0.0
                      , HsOpenSSL == 0.10.3.3

--executable hfreeagent
