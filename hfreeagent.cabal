-- Initial hfreeagent.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

-- The name of the package.
name:                hfreeagent

-- The package version.  See the Haskell package versioning policy (PVP) 
-- for standards guiding when and how versions should be incremented.
-- http://www.haskell.org/haskellwiki/Package_versioning_policy
-- PVP summary:      +-+------- breaking API changes
--                   | | +----- non-breaking API additions
--                   | | | +--- code changes with no API change
version:             0.1.0.0

-- A short (one-line) description of the package.
synopsis:            Haskell bindings for the freeagent accountancy pacakge

-- A longer description of the package.
-- description:         

-- URL for the project homepage or repository.
homepage:            https://github.com/perurbis/hfreeagent

-- The license under which the package is released.
license:             MIT

-- The file containing the license text.
license-file:        LICENSE

-- The package author(s).
author:              Ben Ford

-- An email address to which users can send suggestions, bug reports, and 
-- patches.
maintainer:          ben@perurbis.com

-- A copyright notice.
-- copyright:           

category:            Network

build-type:          Simple

-- Constraint on the version of Cabal needed to build this package.
cabal-version:       >=1.8

library
  hs-source-dirs:       src
                        fa-gen-types
  exposed-modules:      Web.FreeAgent
                        Web.FreeAgent.Types
                        Web.FreeAgent.Util
                        Web.FreeAgent.OAuth2
                        Data.FreeAgent.Types
  -- Need this for emacs?
  other-modules:       Data.FreeAgent.Generate
                       Data.FreeAgent.Types.Attachments
                       Data.FreeAgent.Types.BankAccounts
                       Data.FreeAgent.Types.BankTransactionExplanations
                       Data.FreeAgent.Types.BankTransactions
                       Data.FreeAgent.Types.Bills
                       Data.FreeAgent.Types.Categories
                       Data.FreeAgent.Types.Company
                       Data.FreeAgent.Types.Contacts
                    -- Data.FreeAgent.Types.Estimates
                       Data.FreeAgent.Types.Expenses
                       Data.FreeAgent.Types.Invoices
                       Data.FreeAgent.Types.Notes
                       Data.FreeAgent.Types.Projects
                       Data.FreeAgent.Types.QuickStart
                       Data.FreeAgent.Types.Tasks
                       Data.FreeAgent.Types.Timeslips
                       Data.FreeAgent.Types.Users
  ghc-options:          -O2 -Wall -fno-warn-name-shadowing
  build-depends:        base >= 4 && < 5
                      , bytestring
                      , blaze-builder
                      , hastache == 0.5.0
                      , text
                      , vector
                      , aeson
                      , unordered-containers
                      , containers
                      , transformers
                      , lens
                      , errors
                      , either
                      , io-streams
                      , filepath
                      , directory
                      , split
                      , hoauth2 == 0.3.0
                      , http-streams == 0.6.0.0
                      , HsOpenSSL == 0.10.3.3
                      , HandsomeSoup
                      , hxt

executable faGenTypes
  hs-source-dirs:       fa-gen-types
  -- .hs or .lhs file containing the Main module.
  main-is:              Main.hs         
  ghc-options:          -O2 -Wall -fno-warn-name-shadowing -threaded -fforce-recomp
  -- Modules included in this executable, other than Main.
  other-modules:       Data.FreeAgent.Generate

  -- Other library packages from which modules are imported.
  build-depends:       base ==4.5.*
                     , hfreeagent == 0.1.0.0
                     , bytestring
                     , blaze-builder
                     , hastache == 0.5.0
                     , text
                     , vector
                     , HandsomeSoup
                     , hxt
                     , aeson
                     , unordered-containers
                     , containers
                     , transformers
                     , lens
                     , io-streams
                     , filepath
                     , directory
                     , split
                     , hoauth2 == 0.3.0
                     , http-streams == 0.6.0.0
                     , HsOpenSSL == 0.10.3.3
  